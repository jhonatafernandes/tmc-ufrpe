node instanciador(l1,l2,l3,l4,lx: bool ) returns(estateLamp1, estateLamp2, estateLamp3, estateLamp4, estateLampExt: bool)
    contract
            var
                regra1: bool;
            let 
                regra1 = not(estateLamp1 or estateLamp2 or estateLamp4) & (estateLamp3 & estateLampExt);
        

            tel
            

             enforce (regra1)
             with (c1_lamp, c2_lamp, c3_lamp, c4_lamp, c_lampExt:bool) 
            
             
            let
                estateLamp1 = inlined lamp1(c1_lamp, l1);
                estateLamp2 = inlined lamp2(c2_lamp, l2);
                estateLamp3 = inlined lamp3(c3_lamp, l3);
                estateLamp4 = inlined lamp4(c4_lamp, l4);
                estateLampExt = inlined lampExt(c_lampExt, lx);

                               
                
            tel















